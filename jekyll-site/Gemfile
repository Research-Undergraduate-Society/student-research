# Gemfile

source "https://rubygems.org"

# Jekyll and its plugins
group :jekyll_plugins do
  gem "jekyll", "~> 4.3" # Pin to a specific major version
  gem "jekyll-feed", "~> 0.17.0" # For the post feed
  gem "jekyll-sitemap", "~> 1.4.0" # For generating a sitemap.xml for SEO
end

# Required for 'bundle exec jekyll serve' in Ruby 3.0+
gem "webrick", "~> 1.8"
